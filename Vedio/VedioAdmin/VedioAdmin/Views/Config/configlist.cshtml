@model IList<Entity.MS_Config>
@{

    ViewBag.Title = "ConfigList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="btn-toolbar">
            <div class="btn-group" role="group">
                <button type="button" onclick="create()" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> 添加</button>
            </div>
        </div>
        <div class="content">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th width="30px"><input id="checkall" type="checkbox" data-toolbar=".btn-toolbar" data-target="[name=ID]" data-toggle="checkall" /></th>
                        <th>
                            ID
                        </th>
                        <th>
                            名称
                        </th>
                        <th>
                            值
                        </th>
                        <th>
                            备注
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="30px"><input type="checkbox" name="ID" value="@item.ID" /></td>
                            <td>
                                @item.ID
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td title="@item.Value">
                                @(UCommon.UUtils.GetSubstring(item.Value, 30, "...."))
                            </td>

                            <td>
                                @item.Memo
                            </td>
                            <td>
                                <a class="btn btn-success btn-xs" onclick="edit(@item.ID)" title="编辑">编辑</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
<script>
    function edit(id) {
        $loadModal('/config/ConfigEdit?id=' + id);
    }
        function create(id) {
        $loadModal('/config/ConfigAdd');
    }
</script>
