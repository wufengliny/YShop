
@{
    ViewBag.Title = "修改密码";
    Layout = null;
}
<form action="" method="post" class="form-horizontal" id="_ModalForm">
    <div id="Edit-modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">关闭</span></button>
                    <h4 class="modal-title">修改密码</h4>
                </div>
                <div class="modal-body">
                    <div class="error-panel"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">原密码</label>
                        <div class="col-sm-9">
                            <input type="password" value="" id="oldpwd" name="oldpwd" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">新密码</label>
                        <div class="col-sm-9">
                            <input type="text" value="" id="newpwd" name="newpwd" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">确认新密码</label>
                        <div class="col-sm-9">
                            <input type="text" value="" id="newpwd2" name="newpwd2" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="button" onclick="dosub()" class="btn btn-primary">提交</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div>
    </div>
</form>



<script type="text/javascript">
    $('#Edit-modal').modal('show');
    function dosub() {
        if ($("#oldpwd").val() == "") {
            $("#oldpwd").focus();
            alert('原密码不能为空');
            return;
        }
        if ($("#newpwd").val() == "") {
            $("#newpwd").focus();
            alert('新密码不能为空');
            return;
        }
        if ($("#newpwd2").val() !=$("#newpwd").val()) {
            alert('两次密码输入不一致');
            return;
        }
        var data = $("#_ModalForm").serialize();
        $.post("/admin/ModPwd", data, function (res) {
            if (res == "操作成功") {
                   alert(res);
                location.reload();
            }
            else {
                alert(res);
            }
           
        })
    }
</script>