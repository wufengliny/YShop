
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>
        后台登录
    </title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="cache-control" content="no-cache">
    <link type="text/css" rel="stylesheet" href="/content/LoginResource/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="/content/LoginResource/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/content/LoginResource/orange-blue.css" class="default-style">
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style type="text/css">
    </style>
</head>
<body id="signin-page">
    <div class="page-form">
        <form class="form" id="ffml" method="post" style=" width: 130%;  margin-left: -13%;">
            <div class="header-content">
                <h1 id="logintitle">
                    后台登录
                </h1>
            </div>
            <div class="body-content">
                <div class="form-group">
                    <div class="input-icon right">
                        <i class="fa fa-user" style="margin-top: 16px;font-size: 25px; margin-right: 15px;color: #efebeb;"></i>
                        <input type="text" placeholder="帐   号" name="Account" id="Account" class="form-control" style="background-color:  #6aced5; font-size: 20PX; background-color:rgba(74,126, 156, 0.75); border-color: #868585;color:  rgb(227, 227, 229);height: 55px;">
                    </div>
                </div>
                <div class="form-group" style="margin-top: 26px;">
                    <div class="input-icon right">
                        <i class="fa fa-key" style="margin-top: 16px;font-size: 25px; margin-right: 15px;color: #efebeb;"></i>
                        <input type="password" placeholder="密   码" name="Pwd" id="Pwd" class="form-control" style="background-color:  #6aced5; font-size: 20PX; background-color:rgba(74,126, 156, 0.75); border-color: #868585;color:  rgb(227, 227, 229);height: 55px;">
                    </div>
                </div>
                <div class="form-group" id="yzm" style="margin-top: 26px;text-align:center">
                    <div class="input-icon">
                        <button onclick="dologin()" type="button" id="login" style="width: 155px; height: 56px; font-size:30px;color: #efebeb;background-color: #4e86cb; border: 0; ">
                            &nbsp;&nbsp;&nbsp;登&nbsp;&nbsp;录 &nbsp;
                        </button>
                    </div>
                </div>
                <label class="errtipUser" style="color:red; font-size:30px;"></label>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
    <script type="text/javascript">
          function dologin() {
              $(".errtipUser").html('');
            var data = $("#ffml").serialize();
            $.post("/login/LoginPost", data, function (res) {
                if (res.indexOf("/Main") > 0) {
                    location.href = res;
                }
                else {
                    $(".errtipUser").html(res);
                }
            })
        }
    </script>
</body>

</html>